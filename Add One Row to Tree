//https://leetcode.com/problems/add-one-row-to-tree/
/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    void add(TreeNode* root, int v, int d, int cd) {
        if (!root) return;
        
        if (cd == d) {
            TreeNode *savingleft= root->left;
            TreeNode *savingright = root->right;
            root->right = new TreeNode(v);
            root->right->right = savingright;
            root->left = new TreeNode(v);
            root->left->left = savingleft;
            return;
        }
        add(root->left, v, d, cd + 1);
        add(root->right, v, d, cd + 1);
    }
    TreeNode* addOneRow(TreeNode* root, int v, int d) {
        if (d == 1) {
            TreeNode *newRoot = new TreeNode(v);
            newRoot->left = root;
            return newRoot;
        }
        add(root, v, d, 2);
        return root;
    }
};
