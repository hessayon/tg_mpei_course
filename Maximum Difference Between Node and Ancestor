https://leetcode.com/problems/maximum-difference-between-node-and-ancestor/
/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    int maxAncestorDiff(TreeNode* root) {
        int result=0;
        int maximum=INT_MIN;
        int minimum=INT_MAX;
        process(root,maximum,minimum,result);
        return result;
    }
    void process(TreeNode* node,int mx,int mn,int& result){
        if(!node) return;
        if (mx!=INT_MIN)
            result=max(result,abs(mx-node->val));
        if (mn!=INT_MAX)
            result=max(result,abs(node->val-mn));
        mx=max(mx,node->val);
        mn=min(mn,node->val);
        process(node->left,mx,mn,result);
        process(node->right,mx,mn,result);
    }
};
