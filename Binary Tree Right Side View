https://leetcode.com/problems/binary-tree-right-side-view/
/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    void dfs (TreeNode* root, vector<int>& res,int len){
        if(!root) return;
        if(len==res.size())
            res.push_back(root->val);
        dfs(root->right,res,len+1);
        dfs(root->left,res,len+1);
    }
    vector<int> rightSideView(TreeNode* root) {
        vector<int> result;
        dfs(root,result,0);
        return result;
    }
};
